version 18
__lua__
#include cavediver/player.p8
#include cavediver/cave.p8

function _init()
  game_over = false
  make_player()
  make_cave()
end

function _update()
  if (not game_over) then
    update_cave()
    move_player()
    check_hit()
  else
    if (btnp(5)) _init()
  end
end

function _draw()
  cls()
  draw_cave()
  draw_player()

  if (game_over) then
    print("game over!", 44, 44, 7)
    print("your score: " .. player.score, 34, 54, 7)
    print("press âŽ to play again!", 18, 62, 6)
  else
    print("score: " .. player.score, 2, 2, 7)
  end
end

function check_hit()
  for i = player.x, player.x + 7 do
    if (cave[i + 1].top > player.y
      or cave[i + 1].btm < player.y + 7) then
      game_over = true
      sfx(1)
    end
  end
end
